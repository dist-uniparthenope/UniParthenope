<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="#009432" />
    <ActionBar class="action-bar">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios.position="right"/>

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>
        <Label class="action-bar-title" text="UniParthenope"></Label>
    </ActionBar>
    <GridLayout>
        <StackLayout>
        <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
            <Label class="textPrimary" text="Appelli" horizontalAlignment="center" verticalAlignment="center"/>
        </GridLayout>

        <GridLayout rows="*,*" verticalAlignment="center">
            <StackLayout row="0" class="border" orientation="vertical"  margin="10 10 10 10">
                <Label class="textPrimary" text="Disponibili:" color="#009432" horizontalAlignment="center" margin="5"/>
                <ScrollView height="65%" verticalAlignment="bottom">
                    <ListView id="appelli_listview" class="list-group" items="{{ items_appelli }}" itemTap="onTap" marginRight="5" marginLeft="5">
                        <ListView.itemTemplate >
                            <FlexboxLayout flexDirection="row">
                                <GridLayout  width="100%" marginBottom="5" marginTop="5">
                                    <Label class="textMontserratRegular" fontSize="14" text="{{ title_pre }}" horizontalAlignment="center"/>
                                </GridLayout>
                            </FlexboxLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </ScrollView>
            </StackLayout>
            <StackLayout row="1" class="border" orientation="vertical"  margin="10 10 10 10">
                <Label class="textPrimary" text="Prenotati:" color="#009432" horizontalAlignment="center" margin="5"/>
                <ScrollView>
                    <ListView id="prenotazioni_listview" class="list-group" items="{{ items_prenotazioni }}" itemTap="onTap" marginRight="5" marginLeft="5">
                        <ListView.itemTemplate >
                            <FlexboxLayout flexDirection="row">
                                <GridLayout  width="100%" marginBottom="5" marginTop="5">
                                    <Label class="textMontserratRegular" fontSize="14" text="{{ title_app }}" horizontalAlignment="center" color="gray"/>
                                </GridLayout>
                            </FlexboxLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </ScrollView>
            </StackLayout>
        </GridLayout>

        </StackLayout>
        <GridLayout backgroundColor="#5CC77A" height="9%" verticalAlignment="bottom" width="100%">
            <GridLayout columns="*, *, *, *, *" height="60">
                <GridLayout id="selected_col" backgroundColor="#009432"/>
                <GridLayout col="0" tap="tapCalendar">
                    <Image src="~/images/icon/calendar.png" height="23" width="23" />
                    <StackLayout>
                        <StackLayout class="badge" id="badge_Calendar" visibility="{{ badgeCalendar }}">
                            <Label text="{{ text_badgeCalendar }}" class="badge-text" />
                        </StackLayout>
                    </StackLayout>
                </GridLayout>
                <GridLayout col="1" tap="tapCourses">
                    <Image src="~/images/icon/courses.png" height="23" width="23" />
                    <StackLayout>
                        <StackLayout class="badge" id="badge_Courses" visibility="{{ badgeCourses }}">
                            <Label text="{{ text_badgeCourses }}" class="badge-text" />
                        </StackLayout>
                    </StackLayout>
                </GridLayout>
                <GridLayout col="2" tap="tapFood">
                    <Image src="~/images/icon/food.png" height="23" width="23" />
                    <StackLayout>
                        <StackLayout class="badge" id="badge_Food" visibility="{{ badgeFood }}">
                            <Label text="{{ text_badgeFood }}" class="badge-text" />
                        </StackLayout>
                    </StackLayout>
                </GridLayout>
                <GridLayout col="3" tap="tapBus">
                    <Image src="~/images/icon/front-bus.png" height="23" width="23" />
                    <StackLayout>
                        <StackLayout class="badge" id="badge_Bus" visibility="{{ badgeBus }}">
                            <Label text="{{ text_badgeBus }}" class="badge-text" />
                        </StackLayout>
                    </StackLayout>
                </GridLayout>
                <GridLayout col="4" tap="tapAlert">
                    <Image src="~/images/icon/alert.png" height="23" width="23" />
                    <StackLayout>
                        <StackLayout class="badge" id="badge_Alert" visibility="{{ badgeAlert }}">
                            <Label text="{{ text_badgeAlert }}" class="badge-text" />
                        </StackLayout>
                    </StackLayout>
                </GridLayout>
            </GridLayout>
        </GridLayout>
    </GridLayout>
</Page>
