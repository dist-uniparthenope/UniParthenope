<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:cb="nativescript-checkbox">


    <ActionBar class="action-bar">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios.position="right"/>

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>
        <Label class="action-bar-title" text="UniParthenope"></Label>
    </ActionBar>
    <StackLayout>
        <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
            <Label class="textPrimary" text="Menu del Giorno" horizontalAlignment="center" verticalAlignment="center"/>
        </GridLayout>

    <ScrollView height="100%">

        <StackLayout marginRight="5" marginLeft="5">

            <TextField id="nome" hint="Nome" class="input input-border" marginBottom="10"/>
            <TextField id="desc" hint="Descrizione" class="input input-border" marginBottom="10"/>
            <TextField id="prezzo" hint="Prezzo" class="input input-border" marginBottom="10"/>
            <cb:CheckBox checked="false" text="Sempre attivo" id="alwaysActive" color="black" fillColor="black" marginTop="5" marginLeft="5"/>
            <TextField id="tipo" hint="Tipologia" class="input input-border" marginBottom="10"/>

            <Button text="Pubblica" ontap="onTapSave"/>

        </StackLayout>
    </ScrollView>

    </StackLayout>
</Page>
