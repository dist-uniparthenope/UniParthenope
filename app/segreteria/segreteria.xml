<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="#009432" />
    <ActionBar class="action-bar">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios.position="right"/>

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>
        <Label class="action-bar-title" text="UniParthenope"></Label>
    </ActionBar>
    <StackLayout>
        <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
            <Label class="textPrimary" text="Segreterie" horizontalAlignment="center" verticalAlignment="center"/>
        </GridLayout>

        <StackLayout orientation="vertical">
            <StackLayout orientation="vertical" marginTop="10">
                <Label class="textPrimary" text="Segreteria Didattica" color="#009432" horizontalAlignment="center"/>
                <Label fontSize="14" class="textPrimary-bold" text="APERTA" id="aperturaDidattica" color="#009432" horizontalAlignment="center"/>
                <GridLayout rows="30,30,30,30,30" marginRight="10" marginLeft="10" class="border" borderWidth="2">
                    <GridLayout row="0">
                        <Label fontSize="14" class="textPrimary" id="did_0" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_did_0" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="1" backgroundColor="#5CC77A">
                        <Label fontSize="14" class="textPrimary" id="did_1"  horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_did_1" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="2">
                        <Label fontSize="14" class="textPrimary" id="did_2" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_did_2" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="3" backgroundColor="#5CC77A">
                        <Label fontSize="14" class="textPrimary" id="did_3"  horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_did_3" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="4">
                        <Label fontSize="14" class="textPrimary" id="did_4" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_did_4" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                </GridLayout>
            </StackLayout>
            <StackLayout orientation="vertical" marginTop="10" >
                <Label class="textPrimary" text="Segreteria Studenti" color="#009432" horizontalAlignment="center"/>
                <Label fontSize="14" class="textPrimary-bold" text="APERTA" id="aperturaStudente" color="#009432" horizontalAlignment="center"/>
                <GridLayout rows="30,30,30,30,30" marginRight="10" marginLeft="10" class="border" borderWidth="2">
                    <GridLayout row="0">
                        <Label fontSize="14" class="textPrimary" id="stu_0" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_stu_0" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="1" backgroundColor="#5CC77A">
                        <Label fontSize="14" class="textPrimary" id="stu_1"  horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_stu_1" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="2">
                        <Label fontSize="14" class="textPrimary" id="stu_2" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_stu_2" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="3" backgroundColor="#5CC77A">
                        <Label fontSize="14" class="textPrimary" id="stu_3"  horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_stu_3" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="4">
                        <Label fontSize="14" class="textPrimary" id="stu_4" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" id="time_stu_4" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                </GridLayout>
            </StackLayout>
        </StackLayout>

    </StackLayout>
</Page>
