<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="#009432" />
    <ActionBar class="action-bar">
        <ActionItem icon="~/images/logo_parth.png"
                    tap="onGeneralMenu"
                    android.position="right"
                    ios.position="right"/>

        <ActionItem icon="res://menu"
                    ios:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    android.position="right">
        </ActionItem>

        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="right">
        </ActionItem>
        <Label class="action-bar-title" text="UniParthenope"></Label>
    </ActionBar>
    <StackLayout>
        <GridLayout class="two-color-gradient" width="100%" height="10%" verticalAlignment="top">
            <Label class="textPrimary" text="Segreterie" horizontalAlignment="center" verticalAlignment="center"/>
        </GridLayout>

        <StackLayout orientation="vertical">
            <StackLayout orientation="vertical" marginTop="10">
                <Label class="textPrimary" text="Segreteria Didattica" color="#009432" horizontalAlignment="center"/>
                <Label fontSize="14" class="textPrimary" text="APERTA" color="#009432" horizontalAlignment="center"/>
                <GridLayout rows="30,30,30" marginRight="10" marginLeft="10">
                    <GridLayout row="0">
                        <Label fontSize="14" class="textPrimary" text="VEN" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" text="12:00 - 16:00" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="1">
                        <Label fontSize="14" class="textPrimary" text="VEN" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" text="12:00 - 16:00" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="2">
                        <Label fontSize="14" class="textPrimary" text="LUN" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" text="12:00 - 16:00" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                </GridLayout>
            </StackLayout>
            <StackLayout height="1" backgroundColor="#009432" marginLeft="10" marginRight="10" marginTop="5" marginBottom="5"/>
            <StackLayout orientation="vertical">
                <Label class="textPrimary" text="Segreteria Studenti" color="#009432" horizontalAlignment="center"/>
                <Label fontSize="14" class="textPrimary" text="CHIUSA" color="#009432" horizontalAlignment="center"/>
                <GridLayout rows="30,30,30" marginRight="10" marginLeft="10">
                    <GridLayout row="0">
                        <Label fontSize="14" class="textPrimary" text="VEN" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" text="12:00 - 16:00" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="1">
                        <Label fontSize="14" class="textPrimary" text="VEN" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" text="12:00 - 16:00" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                    <GridLayout row="2">
                        <Label fontSize="14" class="textPrimary" text="LUN" color="#009432" horizontalAlignment="left"/>
                        <Label fontSize="14" class="textPrimary" text="12:00 - 16:00" color="#009432" horizontalAlignment="right"/>
                    </GridLayout>
                </GridLayout>
            </StackLayout>
        </StackLayout>

    </StackLayout>
</Page>
